@model BranchDTO
@{
    ViewData["Title"] = "Branches";
    var currentPage = 1;


}
<h1>@ViewData["Title"]</h1>
<div class=" d-flex justify-content-end">
    <button type="button" class="btn btn-primary">Add Branch</button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Manager Name</th>
            <th scope="col">Opening Hour</th>
            <th scope="col">Closing Hour</th>
            <th scope="col">Working Hours</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model.data)
        {
            <tr>
                <th scope="row">@branch.Id</th>
                <td>@branch.Title</td>
                <td>@branch.ManagerName</td>
                <td>@branch.OpenningHour</td>
                <td>@branch.ClosingHour</td>
                <td>@branch.WorkingHours</td>
                <td>
                    <button type="button" date-object="@branch" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeletingModal">
                        Delete
                    </button>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @{
            var page = 1;
            for (int i = 0; i < Model.totalPages; i++)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Branches" asp-action="ListBranches" asp-route-pageNumber="@(i + 1)">@(i + 1)</a>
                </li>
            }
        }
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>



<!-- Modal -->
<div class="modal fade" id="DeletingModal" tabindex="-1" aria-labelledby="Deleting Modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the branch?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
              
                <a class="page-link" asp-controller="Branches" asp-action="DeleteBranch" asp-route-Id="1" method="delete">Yes</a>
            </div>
        </div>
    </div>
</div>